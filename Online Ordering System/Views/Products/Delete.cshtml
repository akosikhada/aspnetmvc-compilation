@model IPT_OrderingSystem.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold text-danger">Delete Product</h2>
                        <p class="text-muted">Are you sure you want to delete this product?</p>
                    </div>

                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        This action cannot be undone.
                    </div>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-3">Name</dt>
                                <dd class="col-sm-9">@Model.Name</dd>

                                <dt class="col-sm-3">Description</dt>
                                <dd class="col-sm-9">@Model.Description</dd>

                                <dt class="col-sm-3">Price</dt>
                                <dd class="col-sm-9">â‚±@Model.Price.ToString("N")</dd>

                                <dt class="col-sm-3">Stock</dt>
                                <dd class="col-sm-9">@Model.Stock</dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <input type="hidden" asp-for="ProductId" />
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="bi bi-arrow-left me-2"></i>Back
                        </a>
                        <button type="submit" class="btn btn-danger btn-lg px-4">
                            <i class="bi bi-trash me-2"></i>Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        }
        .card {
            border-radius: 15px;
        }
        .alert {
            border-radius: 10px;
        }
        dt {
            font-weight: 600;
        }
    </style>
}