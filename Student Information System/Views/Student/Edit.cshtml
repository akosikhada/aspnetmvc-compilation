@model StudentInfo.Models.Entities.Student

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 fw-bold text-primary">Edit Student</h4>
                        <a class="btn btn-outline-secondary btn-sm" asp-controller="Student" asp-action="List">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model is null)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle"></i> Student not found
                        </div>
                    }
                    else
                    {
                        <form method="post">
                            <div class="mb-4">
                                <label class="form-label fw-semibold">Student ID</label>
                                <input type="text" class="form-control bg-light" asp-for="Id" readonly />
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-semibold">Full Name</label>
                                <input type="text" class="form-control" asp-for="Name" placeholder="Enter student name" />
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-semibold">Age</label>
                                <input type="number" class="form-control" asp-for="Age" placeholder="Enter age" />
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-semibold">Year Level</label>
                                <input type="text" class="form-control" asp-for="Year" placeholder="Enter year level" />
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-semibold">Section</label>
                                <input type="text" class="form-control" asp-for="Section" placeholder="Enter section" />
                            </div>

                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-lg"></i> Save Changes
                                </button>
                                <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Student">
                                    <i class="bi bi-trash"></i> Delete Student
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}