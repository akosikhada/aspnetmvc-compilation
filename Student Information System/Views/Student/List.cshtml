@model List<StudentInfo.Models.Entities.Student>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 fw-bold text-primary">Student Management</h4>
                        <div>
                            <a class="btn btn-success me-2" asp-action="Add" asp-controller="Student">
                                <i class="bi bi-plus-circle"></i> Add Student
                            </a>
                            <a class="btn btn-outline-danger" asp-controller="Accounts" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col" class="text-center">ID</th>
                                    <th scope="col">Name</th>
                                    <th scope="col" class="text-center">Age</th>
                                    <th scope="col" class="text-center">Year</th>
                                    <th scope="col" class="text-center">Section</th>
                                    <th scope="col" class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var student in Model)
                                {
                                    <tr>
                                        <td class="text-center">@student.Id</td>
                                        <td>@student.Name</td>
                                        <td class="text-center">@student.Age</td>
                                        <td class="text-center">@student.Year</td>
                                        <td class="text-center">@student.Section</td>
                                        <td class="text-center">
                                            <a class="btn btn-primary btn-sm" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
